<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:showIn="@layout/activity_universe"
    tools:context=".views.UniverseView">

    <TextView
        android:id="@+id/region_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="24dp"
        android:text="Select a Region"
        android:textColor="#0E0000"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridView
        android:id="@+id/universe_gridView"
        android:layout_width="298dp"
        android:layout_height="200dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="48dp"
        android:numColumns="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/region_view" />

    <TextView
        android:id="@+id/regionname_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Name "
        android:textColor="#0E0000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        app:layout_constraintTop_toBottomOf="@+id/universe_gridView" />

    <TextView
        android:id="@+id/region_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="select a region"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="200dp"
        app:layout_constraintTop_toBottomOf="@+id/universe_gridView" />

    <TextView
        android:id="@+id/planet_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Planets "
        android:textColor="#0E0000"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/regionname_view"/>

    <TextView
        android:id="@+id/planet_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="select a region"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="200dp"
        app:layout_constraintTop_toBottomOf="@+id/region_selected" />


    <TextView
        android:id="@+id/techlevel_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tech Level "
        android:textColor="#0E0000"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        app:layout_constraintTop_toBottomOf="@+id/planet_view" />

    <TextView
        android:id="@+id/techlevel_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="select a region"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="200dp"
        app:layout_constraintTop_toBottomOf="@+id/planet_selected"/>


    <TextView
        android:id="@+id/resource_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resource "
        android:textColor="#0E0000"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        app:layout_constraintTop_toBottomOf="@+id/techlevel_view" />

    <TextView
        android:id="@+id/resource_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="select a region"
        android:gravity="center"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="200dp"
        app:layout_constraintTop_toBottomOf="@+id/techlevel_selected" />

    <TextView
        android:id="@+id/location_view"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:text="Location "
        android:textColor="#0E0000"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        app:layout_constraintTop_toBottomOf="@+id/resource_view"/>

    <TextView
        android:id="@+id/location_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="select a region"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="200dp"
        app:layout_constraintTop_toBottomOf="@+id/resource_selected" />

    <Button
        android:id="@+id/next_button_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="24dp"
        android:text="NEXT"
        app:layout_constraintStart_toStartOf="@id/region_view"
        app:layout_constraintTop_toBottomOf="@+id/location_selected" />


</android.support.constraint.ConstraintLayout>