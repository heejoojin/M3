<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/content_minigame">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Choose your species"
        android:textAlignment="center"
        android:textColor="#6d3d7a"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="3">

    <Button
        android:id="@+id/btn_terran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:hint="Choose Terran"/>

    <Button
        android:id="@+id/btn_protoss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:hint="Choose Protoss"/>

    <Button
        android:id="@+id/btn_zerg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:hint="Choose Zerg"/>
    </LinearLayout>

    <TextView
        android:id="@+id/instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text=" Instruction: "
        android:textAlignment="center"
        android:textColor="#6d3d7a"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/instruction2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="   This game is influenced by Starcraft, centers on galatic struggle \n    for dominance among three species   \n   - Terran win against Zerg and lose to Protoss.\n   - Protoss win against Terran and lose to Zerg.\n   - Zerg win against Protoss and lose to Terran. "
        android:textAlignment="center"
        android:textColor="#6d3d7a"
        android:textSize="12dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EAEAEA"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="2">

    <ImageView
        android:id="@+id/iv_input"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:tag="input"/>

    <ImageView
        android:id="@+id/iv_output"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="#ffffff"/>

    </LinearLayout>
</LinearLayout>