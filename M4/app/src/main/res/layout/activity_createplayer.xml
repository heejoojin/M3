<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.CreatePlayerView">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginLeft="136dp"
        android:layout_marginTop="16dp"
        android:text="Welcome!"
        android:textColor="#6d3d7a"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Name"
        app:layout_constraintTop_toBottomOf="@+id/welcome"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#6d3d7a"
        android:textSize="21sp"
        android:layout_marginLeft="40dp" android:layout_marginStart="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:ems="15"
        android:id="@+id/player_name" app:layout_constraintTop_toTopOf="@+id/name_view"
        android:layout_marginTop="40dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="40dp" android:layout_marginStart="40dp"/>

    <TextView
        android:text="Difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp" android:id="@+id/difficulty_header" android:textSize="20sp"
        android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/player_name"
        android:textColor="#6d3d7a"/>

    <TextView
        android:text="difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="61dp"
        app:layout_constraintEnd_toEndOf="@id/player_name"
        android:id="@+id/player_difficulty"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/player_name"/>

    <TextView
        android:text="Spaceship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textColor="#6d3d7a"
        android:id="@+id/ship_header" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp" android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/difficulty_header"/>

    <TextView
        android:id="@+id/player_ship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="25dp"
        android:text="ship"
        app:layout_constraintEnd_toEndOf="@id/player_name"
        app:layout_constraintHorizontal_bias="0.727"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/difficulty_header" />

    <TextView
        android:text="Credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#6d3d7a"
        android:id="@+id/credit_header" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp" android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/ship_header"/>

    <TextView
        android:text="credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="60dp" app:layout_constraintEnd_toEndOf="@id/player_name"
        android:id="@+id/player_credit"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/ship_header"/>

    <TextView
        android:text="Skill Points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#6d3d7a"
        android:id="@+id/skill_points" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp" android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/credit_header"/>

    <!--<TextView-->
    <!--android:text="16"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:id="@+id/skill_points_number" android:layout_marginLeft="40dp" android:layout_marginStart="40dp"-->
    <!--app:layout_constraintStart_toEndOf="@+id/skill_points"-->
    <!--app:layout_constraintTop_toTopOf="@+id/skill_points"/>-->

    <TextView
        android:text="Pilot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp" android:id="@+id/pilot_header" android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/skill_points"/>
    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_pilot"
        app:layout_constraintTop_toTopOf="@+id/pilot_header" app:layout_constraintStart_toEndOf="@+id/pilot_header"
        android:layout_marginLeft="50dp" android:layout_marginStart="50dp"/>

    <TextView
        android:text="Fighter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fighter_header" android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/pilot_header" app:layout_constraintStart_toStartOf="@+id/pilot_header"
        />
    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_fighter"
        app:layout_constraintTop_toTopOf="@+id/fighter_header" app:layout_constraintStart_toEndOf="@+id/pilot_header"
        android:layout_marginLeft="50dp" android:layout_marginStart="50dp"/>

    <TextView
        android:text="Trader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/fighter_header"
        android:id="@+id/trader_header" android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/fighter_header"/>

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_trader"
        app:layout_constraintTop_toTopOf="@+id/trader_header" app:layout_constraintStart_toEndOf="@+id/pilot_header"
        android:layout_marginLeft="50dp" android:layout_marginStart="50dp"/>

    <TextView
        android:text="Engineer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/trader_header"
        android:id="@+id/engineer_header" android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/trader_header"/>
    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_engineer"
        app:layout_constraintTop_toTopOf="@+id/engineer_header" app:layout_constraintStart_toEndOf="@+id/pilot_header"
        android:layout_marginLeft="50dp" android:layout_marginStart="50dp"/>

    <Button
        android:id="@+id/create_universe_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Create Your Universe "
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/engineer_header"
        />

</android.support.constraint.ConstraintLayout>