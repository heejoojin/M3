<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.ErrorView"
    >

    <TextView
        android:id="@+id/no_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="264dp"
        android:text="Cannot Create Your Player"
        android:textColor="#6d3d7a"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yon need to allocate all the points!"
        app:layout_constraintBottom_toBottomOf="@id/no_player"
        app:layout_constraintEnd_toEndOf="@id/no_player"
        app:layout_constraintStart_toStartOf="@id/no_player"
        android:layout_marginTop="100dp" app:layout_constraintTop_toTopOf="@id/no_player" />

</android.support.constraint.ConstraintLayout>