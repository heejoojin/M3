<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.PlayerView">

    <TextView
        android:id="@+id/welcomeafterlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:text="Welcome Back!"
        android:textColor="#6d3d7a"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/name_1"
        app:layout_constraintTop_toBottomOf="@+id/welcomeafterlogin"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#6d3d7a"
        android:textSize="21sp"
        android:layout_marginLeft="40dp" android:layout_marginStart="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:ems="15"
        android:id="@+id/player_name" app:layout_constraintTop_toTopOf="@+id/name_view"
        android:layout_marginTop="40dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="40dp" android:layout_marginStart="40dp"/>

    <TextView
        android:text="@string/difficulty_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:id="@+id/difficulty_header"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/player_name"
        android:textColor="#6d3d7a"/>

    <TextView
        android:id="@+id/player_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="16dp"
        android:text="@string/difficulty_1"
        app:layout_constraintEnd_toEndOf="@id/player_name"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_name" />

    <TextView
        android:text="@string/spaceship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textColor="#6d3d7a"
        android:id="@+id/ship_header"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/difficulty_header"/>

    <TextView
        android:id="@+id/player_ship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:text="@string/spaceship"
        app:layout_constraintEnd_toEndOf="@id/player_name"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_difficulty" />

    <TextView
        android:text="@string/credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#6d3d7a"
        android:id="@+id/credit_header"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ship_header"/>

    <TextView
        android:id="@+id/player_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:text="@string/credits"
        app:layout_constraintEnd_toEndOf="@id/player_name"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ship_header" />

    <TextView
        android:id="@+id/skill_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="12dp"
        android:text="@string/skill_points_1"
        android:textColor="#6d3d7a"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/credit_header" />

    <!--<TextView-->
    <!--android:text="16"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:id="@+id/skill_points_number"
    android:layout_marginLeft="40dp"
    android:layout_marginStart="40dp"-->
    <!--app:layout_constraintStart_toEndOf="@+id/skill_points"-->
    <!--app:layout_constraintTop_toTopOf="@+id/skill_points"/>-->

    <TextView
        android:id="@+id/pilot_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="8dp"
        android:text="@string/pilot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skill_points" />
    <TextView
        android:text="@string/_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_pilot"
        app:layout_constraintTop_toTopOf="@+id/pilot_header"
        app:layout_constraintStart_toEndOf="@+id/pilot_header"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"/>

    <TextView
        android:id="@+id/fighter_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/fighter"
        app:layout_constraintStart_toStartOf="@+id/pilot_header"
        app:layout_constraintTop_toBottomOf="@+id/pilot_header" />
    <TextView
        android:text="@string/_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_fighter"
        app:layout_constraintTop_toTopOf="@+id/fighter_header"
        app:layout_constraintStart_toEndOf="@+id/pilot_header"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"/>

    <TextView
        android:id="@+id/trader_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/trader"
        app:layout_constraintStart_toStartOf="@+id/fighter_header"
        app:layout_constraintTop_toBottomOf="@+id/fighter_header" />

    <TextView
        android:text="@string/_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_trader"
        app:layout_constraintTop_toTopOf="@+id/trader_header"
        app:layout_constraintStart_toEndOf="@+id/pilot_header"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"/>

    <TextView
        android:id="@+id/engineer_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/engineer"
        app:layout_constraintStart_toStartOf="@+id/trader_header"
        app:layout_constraintTop_toBottomOf="@+id/trader_header" />
    <TextView
        android:text="@string/_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_engineer"
        app:layout_constraintTop_toTopOf="@+id/engineer_header"
        app:layout_constraintStart_toEndOf="@+id/pilot_header"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"/>

    <TextView
        android:id="@+id/region_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Region"
        android:textColor="#6d3d7a"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/engineer_header"
        app:layout_constraintTop_toBottomOf="@+id/engineer_header" />

    <TextView
        android:id="@+id/player_region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="region"
        app:layout_constraintStart_toStartOf="@+id/player_engineer"
        app:layout_constraintTop_toBottomOf="@+id/player_engineer" />

    <TextView
        android:id="@+id/player_planet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="planet"
        app:layout_constraintStart_toStartOf="@+id/player_region"
        app:layout_constraintTop_toBottomOf="@+id/player_region" />

    <TextView
        android:id="@+id/planet_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Planet"
        android:textColor="#6d3d7a"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/region_header"
        app:layout_constraintTop_toBottomOf="@+id/region_header" />

    <TextView
        android:id="@+id/weapon_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Equipments"
        android:textColor="#6d3d7a"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/planet_header"
        app:layout_constraintTop_toBottomOf="@+id/planet_header" />

    <TextView
        android:id="@+id/player_weapon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="16dp"
        android:text="weapon"
        app:layout_constraintStart_toStartOf="@+id/player_planet"
        app:layout_constraintTop_toBottomOf="@+id/player_planet" />

    <!--<TextView-->
        <!--android:id="@+id/item_header"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="8dp"-->
        <!--android:text="Items"-->
        <!--android:textColor="#6d3d7a"-->
        <!--android:textSize="20sp"-->
        <!--app:layout_constraintStart_toStartOf="@+id/region_header"-->
        <!--app:layout_constraintTop_toBottomOf="@+id/region_header" />-->

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/weapon_header"
        />


</androidx.constraintlayout.widget.ConstraintLayout>